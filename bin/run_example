#!/bin/bash

set -e

WORKDIR=$(dirname $0)
PORTS="9091 9092 9093"

QUIET=${1:-}
DEBUG='--debug'


if [[ ${QUIET} == "-q" ]]; then
    echo "Setting quiet logging; minimal echo to console"
    DEBUG="--no-debug"
    GLOG_v=2
    GLOG_logtostderr=1
fi

cd ${WORKDIR}/../build

for port in ${PORTS}; do
    OUT="/tmp/detector_${port}.log"
    ./bin/gossip_detector_example ${DEBUG} --port=${port} \
            --http --http-port=$((${port} - 1000)) \
            --seeds=gondor:9091,gondor:9092,gondor:9093 >$OUT  2>&1 &
    echo "[INFO] Started Detector on port ${port}; output in ${OUT}"
done
